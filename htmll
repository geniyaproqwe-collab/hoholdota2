<body>
    <div class="container">
        <div class="header">
            <h1>LumeXShop</h1>
            <p>Магазин сетов NeverTime</p>
        </div>
        
        <div class="balance-card">
            <h3>Ваш баланс</h3>
            <div class="balance-items">
                <div class="balance-item">
                    <div class="balance-amount" id="balance-tg">0 ₸</div>
                    <div class="balance-label">Тенге</div>
                </div>
                <div class="balance-item">
                    <div class="balance-amount" id="balance-rub">0 ₽</div>
                    <div class="balance-label">Рубли</div>
                </div>
                <div class="balance-item">
                    <div class="balance-amount" id="balance-star">0 ⭐</div>
                    <div class="balance-label">Звезды</div>
                </div>
            </div>
        </div>
        
        <div class="actions">
            <a href="https://t.me/your_bot_username?start=deposit" class="btn btn-primary" target="_blank">Пополнить</a>
            <a href="https://t.me/your_bot_username?start=withdraw" class="btn" target="_blank">Вывести</a>
            <a href="https://t.me/your_bot_username?start=my_sets" class="btn" target="_blank">Мои сеты</a>
            <a href="https://t.me/your_bot_username?start=sell_set" class="btn" target="_blank">Продать сет</a>
        </div>
        
        <div class="tabs">
            <div class="tab active" onclick="showTab('marketplace')">Магазин</div>
            <div class="tab" onclick="showTab('purchases')">Покупки</div>
            <div class="tab" onclick="showTab('sales')">Продажи</div>
        </div>
        
        <!-- Магазин -->
        <div id="marketplace" class="tab-content">
            <div class="sets-grid" id="sets-container">
                <!-- Сеты будут загружаться через API -->
            </div>
        </div>
        
        <!-- Покупки -->
        <div id="purchases" class="tab-content hidden">
            <div id="purchases-container">
                <div class="empty-state">
                    <h3>Покупок пока нет</h3>
                    <p>Купите свой первый сет в магазине!</p>
                </div>
            </div>
        </div>
        
        <!-- Продажи -->
        <div id="sales" class="tab-content hidden">
            <div id="sales-container">
                <div class="empty-state">
                    <h3>Продаж пока нет</h3>
                    <p>Разместите свой первый сет на продажу!</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Данные пользователя (будут получаться из бота)
        let userData = {
            tg: 0,
            rub: 0,
            star: 0
        };
        
        // Массив для сетов (будет заполняться через API)
        let setsData = [];
        
        function updateBalance() {
            document.getElementById('balance-tg').textContent = userData.tg + ' ₸';
            document.getElementById('balance-rub').textContent = userData.rub + ' ₽';
            document.getElementById('balance-star').textContent = userData.star + ' ⭐';
        }
        
        function showTab(tabName) {
            // Скрыть все вкладки
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Показать выбранную вкладку
            document.getElementById(tabName).classList.remove('hidden');
            
            // Обновить активные табы
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
        }
        
        function loadSets() {
            const container = document.getElementById('sets-container');
            
            if (setsData.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>Сетов пока нет</h3>
                        <p>Будьте первым, кто разместит сет!</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = '';
            
            setsData.forEach(set => {
                const setCard = `
                    <div class="set-card">
                        <img src="${set.image}" alt="${set.name}" class="set-image">
                        <div class="set-info">
                            <div class="set-name">${set.name}</div>
                            <div class="set-description">${set.description}</div>
                            <div class="set-prices">
                                <span class="price price-tg">${set.prices.tg} ₸</span>
                                <span class="price price-rub">${set.prices.rub} ₽</span>
                                <span class="price price-star">${set.prices.star} ⭐</span>
                            </div>
                            <button class="buy-btn" onclick="buySet(${set.id})">Купить</button>
                            <div class="seller-info">Продавец: @${set.seller}</div>
                        </div>
                    </div>
                `;
                container.innerHTML += setCard;
            });
        }
        
        function buySet(setId) {
            const set = setsData.find(s => s.id === setId);
            if (!set) return;
            
            // Отправка данных в бота для покупки через гаранта
            if (window.Telegram && window.Telegram.WebApp) {
                Telegram.WebApp.sendData(JSON.stringify({
                    action: 'buy_set',
                    set_id: setId,
                    seller: set.seller
                }));
            } else {
                // Если не в Telegram, открываем бота
                window.open(`https://t.me/your_bot_username?start=buy_${setId}`, '_blank');
            }
        }
        
        // Функция для загрузки данных из бота
        function loadUserData() {
            // Здесь будет запрос к API бота для получения баланса и сетов
            // Пока заглушка
            updateBalance();
            loadSets();
        }
        
        // Инициализация
        document.addEventListener('DOMContentLoaded', function() {
            loadUserData();
            
            // Интеграция с Telegram Web App
            if (window.Telegram && window.Telegram.WebApp) {
                Telegram.WebApp.ready();
                Telegram.WebApp.expand();
            }
        });
    </script>
</body>
</html>
